{% extends "layout.html.twig" %}
{% set drugMenu = true %}

{% block title %}Practiciens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    <th>Prénom</th>
                    <th>Type</th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td><a href="/practitioners/{{ practitioner.id }}">{{ practitioner.name }}</a></td>
                    <td>{{ practitioner.firstName }}</td>
                    <td>{{ practitioner.type.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun practitien trouvé.</div>
{% endif %}   
{% endblock %}